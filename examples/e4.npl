scope main {                               // definition of a scope of norms

    // some facts
    vl(20).

    // alice has 3 seconds to achieve b(0), or else, sanction s1
    norm n1: vl(X) & X > 5
       -> obligation(alice,n1, b(0), `3 seconds`)
       if unfulfilled: s1(alice,X).

    // bob has 2 seconds to fine Alice, or else, sanction s2
    // (value of c is provide by an external source)
    sanction-rule s1(A,X): c(Y) -> obligation(bob,true,fine(A,X*Y),`2 seconds`)
       if unfulfilled: s2.

    sanction-rule s2 -> remove_from_systems(bob).
    // jail(bob) is a "regimented sanction", it is instrumented in the environment
}
